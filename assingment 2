    {
      "cell_type": "code",
      "source": [
        "class ShoppingCart:\n",
        "\n",
        "    def __init__(self, customer_name):\n",
        "        self.customer_name = customer_name\n",
        "        self.items = []\n",
        "\n",
        "    def add_item(self, name, price, quantity):\n",
        "        item = {\"name\": name, \"price\": price, \"quantity\": quantity}\n",
        "        self.items.append(item)\n",
        "\n",
        "    def remove_item(self, name):\n",
        "        for item in self.items:\n",
        "            if item[\"name\"] == name:\n",
        "                self.items.remove(item)\n",
        "                print(name, \"removed\")\n",
        "                return\n",
        "        print(\"Item not found\")\n",
        "\n",
        "\n",
        "    def total_price(self):\n",
        "        total = 0\n",
        "        for item in self.items:\n",
        "            total = total + item[\"price\"] * item[\"quantity\"]\n",
        "        return total\n",
        "\n",
        "    def show_cart(self):\n",
        "        print(\"Customer:\", self.customer_name)\n",
        "        print(\"Items:\")\n",
        "        for item in self.items:\n",
        "            print(item[\"name\"], \"-\", item[\"price\"], \"x\", item[\"quantity\"])\n",
        "        print(\"Total:\", self.total_price())\n",
        "        print(\"------------------\")\n",
        "\n",
        "\n",
        "cart1 = ShoppingCart(\"Sajib\")\n",
        "cart2 = ShoppingCart(\"SIAM\")\n",
        "\n",
        "cart1.add_item(\"Pen\", 10, 2)\n",
        "cart1.add_item(\"Book\", 100, 1)\n",
        "cart1.add_item(\"Bag\", 500, 1)\n",
        "\n",
        "cart1.remove_item(\"Pen\")\n",
        "\n",
        "cart1.show_cart()\n",
        "\n",
        "\n",
        "cart2.add_item(\"Shirt\", 800, 1)\n",
        "cart2.add_item(\"Shoes\", 1500, 1)\n",
        "cart2.add_item(\"Cap\", 200, 2)\n",
        "\n",
        "cart2.remove_item(\"Cap\")\n",
        "\n",
        "cart2.show_cart()"
      ],
      "metadata": {
